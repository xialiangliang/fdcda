###set($layout = "/layout/layout2.vm")
#set($pageTitle = "title")
#set($JS = ["/js/page/sysRole/new-update.js", "/js/jquery.form.min.js"])
<div class="yw_breadcrumb">
    当前位置：<a href="javascript:;">$!{currentPosStr}</a>
</div>
<div class="col-sm-12">
    <form action="/sysRole/update"  method="post" class="form-horizontal layui-form" id="updateForm_sysRole">
        <input type="hidden" name="id" id="id" value="$!{param.id}" />
        <div class="form-group">
            <label for="id" class="col-sm-2 control-label">主键ID</label>
            <label class="col-sm-10 control-label" style="text-align: left;">$!{param.id}</label>
        </div>    
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">角色名称</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" value="$!{param.name}" >
            </div>
        </div>
        <div class="form-group" align="left">
            <label for="treeview" class="col-sm-2 control-label">权限设置</label>
            <div class="col-sm-10">
            </div>
        </div>
        <div class="form-group">
            <div id="treeview" class="col-sm-12"></div>
        </div>
        <input type="hidden" id="updatedData" name="updatedData">
        <div class="form-group" align="right">
            <div class="col-sm-12">
                <button type="button" class="btn btn-default btn-close">关闭</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>