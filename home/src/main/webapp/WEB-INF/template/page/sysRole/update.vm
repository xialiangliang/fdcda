#set($layout = "/layout/layout2.vm")
#set($pageTitle = "title")
#set($JS = ["/js/page/sysRole/new-update.js", "/js/jquery.form.min.js"])
<div class="col-sm-12">
    <form action="/sysRole/update"  method="post" class="form-horizontal layui-form" id="updateForm_sysRole">
        <input type="hidden" name="id" id="id" value="$!{param.id}" />
        <div class="layui-form-item">
            <label for="id" class="layui-form-label">主键ID</label>
            <div class="layui-input-block">
                <input type="text" class="layui-input" id="name" value="$!{param.id}" readonly>
            </div>
        </div>    
        <div class="layui-form-item">
            <label for="name" class="layui-form-label">角色名称</label>
            <div class="layui-input-block">
                <input type="text" class="layui-input" id="name" name="name" value="$!{param.name}" >
            </div>
        </div>
        <div class="layui-form-item" align="left">
            <label for="treeview" class="layui-form-label">权限设置</label>
            <div class="layui-input-block">
            </div>
        </div>
        <div class="layui-form-item">
            <div id="treeview" class="col-sm-12"></div>
        </div>
        <input type="hidden" id="updatedData" name="updatedData">
        <div class="layui-form-item" align="right">
            <div class="col-sm-12">
                <button type="button" class="btn btn-default btn-close">关闭</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>