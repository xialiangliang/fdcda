#set($layout = "/layout/layout2.vm")
#set($pageTitle = "title")
#set($JS = ["/js/page/sysUser/new-update.js", "/js/jquery.form.min.js"])
<div class="col-sm-12">
    <form action="/sysUser/update"  method="post" class="form-horizontal" id="updateForm_sysUser">
        <input type="hidden" name="id" value="$!{param.id}" />
        <div class="form-group">
            <label class="col-sm-2 control-label">ID</label>
            <label class="col-sm-10 control-label" style="text-align: left;">$!{param.id}</label>
        </div>    
        <div class="form-group">
            <label for="loginname" class="col-sm-2 control-label">登录名</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="loginname" name="loginname" value="$!{param.loginname}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="username" value="$!{param.username}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="phone" class="col-sm-2 control-label">手机号</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="phone" name="phone" value="$!{param.phone}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="telephone" class="col-sm-2 control-label">固定电话</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="telephone" name="telephone" value="$!{param.telephone}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">邮件地址</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" name="email" value="$!{param.email}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="address" class="col-sm-2 control-label">地址</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="address" name="address" value="$!{param.address}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="valid" class="col-sm-2 control-label">状态</label>
            <div class="col-sm-10">
                <select class="form-control" name="valid" id="valid">
                    <option value="1" #if($!{param.valid}==1) selected #end>有效</option>
                    <option value="2" #if($!{param.valid}==2) selected #end>无效</option>
                </select>
            </div>
        </div>    
        <div class="form-group" align="right">
            <div class="col-sm-12">
                <button type="button" class="btn btn-default btn-close">关闭</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>