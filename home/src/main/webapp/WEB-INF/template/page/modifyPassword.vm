#set($layout = "/layout/layout2.vm")
#set($pageTitle = "title")
#set($JS = ["/js/page/index/modifyfPassword.js", "/js/jquery.form.min.js"])
<div class="col-sm-12">
    <form action="/modifyfPassword/confirm"  method="post" class="form-horizontal" id="form_modifyfPassword">
        <div class="form-group">
            <label for="originPwd" class="col-sm-2 control-label">原密码</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="originPwd" name="originPwd">
            </div>
        </div>
        <div class="form-group">
            <label for="newPwd" class="col-sm-2 control-label">新密码</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="newPwd" name="newPwd">
            </div>
        </div>
        <div class="form-group">
            <label for="confirmNewPwd" class="col-sm-2 control-label">确认新密码</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="confirmNewPwd" name="confirmNewPwd">
            </div>
        </div>
        <input type="hidden" class="form-control" id="loginPwd" name="loginPwd">
        <input type="hidden" class="form-control" id="salt" name="salt" value="${salt}">
        <div class="form-group" align="right">
            <div class="col-sm-12">
                <button type="button" class="btn btn-default btn-close">取消</button>
                <button type="submit" class="btn btn-primary">确定</button>
            </div>
        </div>
    </form>
</div>