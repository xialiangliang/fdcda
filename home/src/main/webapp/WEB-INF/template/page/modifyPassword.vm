#set($layout = "/layout/layout2.vm")
#set($pageTitle = "title")
#set($JS = ["/js/page/index/modifyPassword.js", "/js/jquery.form.min.js", "https://cdn.bootcss.com/js-sha512/0.4.0/sha512.min.js"])
<div class="col-sm-12">
    <form action="/modifyPassword/confirm"  method="post" class="form-horizontal" id="form_modifyfPassword">
        <div class="form-group" id="d-originPwd">
            <label for="originPwd" class="col-sm-4 control-label">原密码</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="originPwd">
            </div>
        </div>
        <div class="form-group" id="d-newPwd">
            <label for="newPwd" class="col-sm-4 control-label">新密码</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="newPwd">
            </div>
        </div>
        <div class="form-group" id="d-confirmNewPwd">
            <label for="confirmNewPwd" class="col-sm-4 control-label">确认新密码</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="confirmNewPwd">
            </div>
        </div>
        <input type="hidden" class="form-control" id="salt" name="salt" value="${salt}">
        <input type="hidden" class="form-control" id="token" name="token" value="${token}">
        <div class="form-group" align="right">
            <div class="col-sm-12">
                <button type="button" class="btn btn-default btn-close">取消</button>
                <button type="submit" class="btn btn-primary">确定</button>
            </div>
        </div>
    </form>
</div>