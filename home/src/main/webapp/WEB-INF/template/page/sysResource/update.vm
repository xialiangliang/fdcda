#set($layout = "/layout/layout2.vm")
#set($pageTitle = "title")
#set($JS = ["/js/page/sysResource/new-update.js", "/js/jquery.form.min.js"])
<div class="col-sm-12">
    <form action="/sysResource/update"  method="post" class="form-horizontal" id="updateForm_sysResource">
        <input type="hidden" name="id" value="$!{param.id}" />
        <div class="form-group">
            <label for="parentId" class="col-sm-2 control-label">父资源</label>
            <div class="col-sm-10">
                <select class="form-control" name="parentId" id="valid" #if ($!{param.parentId} == 0) disabled #end>
                    #foreach($item in $parentList)
                        <option value="${item.id}" #if($!{param.parentId}==$item.id) selected #end>${item.name}</option>
                    #end
                </select>
            </div>
        </div>    
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">资源名称</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" value="$!{param.name}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="url" class="col-sm-2 control-label">资源路径</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="url" name="url" value="$!{param.url}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="type" class="col-sm-2 control-label">类型 1-菜单 2-按钮</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="type" name="type" value="$!{param.type}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="sort" class="col-sm-2 control-label">排序</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="sort" name="sort" value="$!{param.sort}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="memo" class="col-sm-2 control-label">备注</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="memo" name="memo" value="$!{param.memo}" >
            </div>
        </div>    
        <div class="form-group">
            <label for="icon" class="col-sm-2 control-label">图标</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="icon" name="icon" value="$!{param.icon}" >
            </div>
        </div>    
        <div class="form-group" align="right">
            <div class="col-sm-12">
                <button type="button" class="btn btn-default btn-close">关闭</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>