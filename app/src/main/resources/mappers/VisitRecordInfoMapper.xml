	 select t.visit_type, count(*) visit_count
	 from visit_record_info t
	 where t.create_date &lt;= to_date(#{endDate}, 'yyyy-MM-dd HH24:mm:ss')
	   and t.create_date >= to_date(#{beginDate}, 'yyyy-MM-dd HH24:mm:ss')
